<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F0F0"
    android:orientation="vertical" >
     <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#00A5FB" >

        <ImageView
            android:id="@+id/titleIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/user_center_user_icon" />

        <TextView
            android:id="@+id/dayTitle"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="2015年4月"
            android:textColor="#FFFFFF" />
        <TextView
            android:id="@+id/growupNum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF" />
    </RelativeLayout>
	<LinearLayout 
	    android:id="@+id/changeIcon"
        android:layout_width="match_parent"
    	android:layout_height="100dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        >
        <ImageView 
            android:id="@+id/userIcon"
            android:layout_width="60dp"
    		android:layout_height="60dp"
            android:background="@drawable/usercenter_default_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            />
        <LinearLayout 
            android:layout_width="40dp"
    		android:layout_height="wrap_content"
    		android:layout_weight="4"
    		android:layout_gravity="center_vertical"
    		android:layout_marginLeft="20dp"
    		android:orientation="vertical"
            >
            <TextView 
                android:id="@+id/userName"
                android:layout_width="match_parent"
    			android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#181818"
                />
            <TextView 
                android:id="@+id/userDetail1"
                android:layout_width="match_parent"
    			android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#787878"
                />
            <TextView 
                android:id="@+id/userDetail2"
                android:layout_width="match_parent"
    			android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#787878"
                />
        </LinearLayout>
        <RelativeLayout 
    		android:id="@+id/userCountSetting"
            android:layout_width="40dp"
    		android:layout_height="match_parent"
    		android:layout_weight="1"
            >
             <ImageView
	            android:id="@+id/img4"
	            android:layout_width="8dp"
	   			android:layout_height="18dp"
	   			android:layout_alignParentRight="true"
	   			android:layout_marginRight="20dp"
	   			android:background="@drawable/arrowplay"
	   			android:layout_centerVertical="true"
	   			/> 
        </RelativeLayout>
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
    	android:layout_height="0.5dp"
        android:background="#d4d4d4"
        android:layout_marginTop="20dp"
        />
	<RelativeLayout 
        android:id="@+id/item1"
        android:layout_width="match_parent"
    	android:layout_height="44dp"
    	android:background="#FFFFFF"
         >
   		<TextView
            android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:layout_marginLeft="20dp"
   			android:text="我的成长值"
   			android:textSize="14sp"
            android:textColor="#484848"
            android:layout_centerVertical="true"
   			/> 
   		<ImageView 
   		    android:id="@+id/arrow1"
	   		android:layout_width="8dp"
	   		android:layout_height="18dp"
   			android:layout_alignParentRight="true" 
   			android:layout_marginRight="20dp"
   			android:background="@drawable/arrowplay"
   			android:layout_centerVertical="true"
  			/>
   		<TextView 
   		    android:id="@+id/mygrowupNum"
   		    android:layout_toLeftOf="@id/arrow1"
            android:layout_width="wrap_content"
   			android:layout_height="match_parent"
   		    android:layout_marginRight="10dp"
   		    android:textColor="#484848"
   		    android:textSize="14sp"
   		    android:gravity="center"
   		    />
     </RelativeLayout>
	<View 
        android:layout_width="match_parent"
    	android:layout_height="0.5dp"
        android:background="#d4d4d4"
        />
    <View 
        android:layout_width="match_parent"
    	android:layout_height="0.5dp"
        android:background="#d4d4d4"
        android:layout_marginTop="20dp"
        />
	<RelativeLayout 
        android:id="@+id/item2"
        android:layout_width="match_parent"
    	android:layout_height="44dp"
    	android:background="#FFFFFF"
         >
   		<TextView
            android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:layout_marginLeft="20dp"
   			android:text="我的课程"
   			android:textSize="14sp"
            android:textColor="#484848"
            android:layout_centerVertical="true"
   			/> 
   		<ImageView 
   		    android:id="@+id/arrow2"
	   		android:layout_width="8dp"
	   		android:layout_height="18dp"
   			android:layout_alignParentRight="true" 
   			android:layout_marginRight="20dp"
   			android:background="@drawable/arrowplay"
   			android:layout_centerVertical="true"
  			/>
   		<TextView 
   		    android:layout_toLeftOf="@id/arrow2"
            android:layout_width="wrap_content"
   			android:layout_height="match_parent"
   		    android:layout_marginRight="10dp"
   		    android:text="368"
   		    android:visibility="gone"
   		    android:textColor="#484848"
   		    android:textSize="14sp"
   		    android:gravity="center"
   		    />
     </RelativeLayout>
	<View 
        android:layout_width="match_parent"
    	android:layout_height="0.5dp"
        android:background="#d4d4d4"
        />
	<RelativeLayout 
        android:id="@+id/item3"
        android:layout_width="match_parent"
    	android:layout_height="44dp"
    	android:background="#FFFFFF"
         >
   		<TextView
            android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:layout_marginLeft="20dp"
   			android:text="购买课程"
   			android:textSize="14sp"
            android:textColor="#484848"
            android:layout_centerVertical="true"
   			/> 
   		<ImageView 
   		    android:id="@+id/arrow3"
	   		android:layout_width="8dp"
	   		android:layout_height="18dp"
   			android:layout_alignParentRight="true" 
   			android:layout_marginRight="20dp"
   			android:background="@drawable/arrowplay"
   			android:layout_centerVertical="true"
  			/>
   		<TextView 
   		    android:layout_toLeftOf="@id/arrow3"
            android:layout_width="wrap_content"
   			android:layout_height="match_parent"
   		    android:layout_marginRight="10dp"
   		    android:visibility="gone"
   		    android:textColor="#484848"
   		    android:textSize="14sp"
   		    android:gravity="center"
   		    />
     </RelativeLayout>
	<View 
        android:layout_width="match_parent"
    	android:layout_height="0.5dp"
        android:background="#d4d4d4"
        />
	<RelativeLayout 
        android:id="@+id/item9"
        android:layout_width="match_parent"
    	android:layout_height="44dp"
    	android:background="#FFFFFF"
         >
   		<TextView
            android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:layout_marginLeft="20dp"
   			android:text="排行榜"
   			android:textSize="14sp"
            android:textColor="#484848"
            android:layout_centerVertical="true"
   			/> 
   		<ImageView 
   		    android:id="@+id/arrow9"
	   		android:layout_width="8dp"
	   		android:layout_height="18dp"
   			android:layout_alignParentRight="true" 
   			android:layout_marginRight="20dp"
   			android:background="@drawable/arrowplay"
   			android:layout_centerVertical="true"
  			/>
   		<TextView 
   		    android:layout_toLeftOf="@id/arrow9"
            android:layout_width="wrap_content"
   			android:layout_height="match_parent"
   		    android:layout_marginRight="10dp"
   		    android:visibility="gone"
   		    android:textColor="#484848"
   		    android:textSize="14sp"
   		    android:gravity="center"
   		    />
     </RelativeLayout>
	<View 
        android:layout_width="match_parent"
    	android:layout_height="0.5dp"
        android:background="#d4d4d4"
        />
    <View 
        android:layout_width="match_parent"
    	android:layout_height="0.5dp"
        android:background="#d4d4d4"
        android:layout_marginTop="20dp"
        />
	<RelativeLayout 
        android:id="@+id/item4"
        android:layout_width="match_parent"
    	android:layout_height="44dp"
    	android:background="#FFFFFF"
         >
   		<TextView
            android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:layout_marginLeft="20dp"
   			android:text="用户反馈"
   			android:textSize="14sp"
            android:textColor="#484848"
            android:layout_centerVertical="true"
   			/> 
   		<ImageView 
   		    android:id="@+id/arrow4"
	   		android:layout_width="8dp"
	   		android:layout_height="18dp"
   			android:layout_alignParentRight="true" 
   			android:layout_marginRight="20dp"
   			android:background="@drawable/arrowplay"
   			android:layout_centerVertical="true"
  			/>
   		<TextView 
   		    android:layout_toLeftOf="@id/arrow4"
            android:layout_width="wrap_content"
   			android:layout_height="match_parent"
   		    android:layout_marginRight="10dp"
   		    android:text="368"
   		    android:visibility="gone"
   		    android:textColor="#484848"
   		    android:textSize="14sp"
   		    android:gravity="center"
   		    />
     </RelativeLayout>
	<View 
        android:layout_width="match_parent"
    	android:layout_height="0.5dp"
        android:background="#d4d4d4"
        />
	<RelativeLayout 
        android:id="@+id/item5"
        android:layout_width="match_parent"
    	android:layout_height="44dp"
    	android:background="#FFFFFF"
         >
   		<TextView
            android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:layout_marginLeft="20dp"
   			android:text="关于我们"
   			android:textSize="14sp"
            android:textColor="#484848"
            android:layout_centerVertical="true"
   			/> 
   		<ImageView 
   		    android:id="@+id/arrow5"
	   		android:layout_width="8dp"
	   		android:layout_height="18dp"
   			android:layout_alignParentRight="true" 
   			android:layout_marginRight="20dp"
   			android:background="@drawable/arrowplay"
   			android:layout_centerVertical="true"
  			/>
   		<TextView 
   		    android:layout_toLeftOf="@id/arrow5"
            android:layout_width="wrap_content"
   			android:layout_height="match_parent"
   		    android:layout_marginRight="10dp"
   		    android:text="368"
   		    android:visibility="gone"
   		    android:textColor="#484848"
   		    android:textSize="14sp"
   		    android:gravity="center"
   		    />
     </RelativeLayout>
	<View 
        android:layout_width="match_parent"
    	android:layout_height="0.5dp"
        android:background="#d4d4d4"
        />
	<RelativeLayout 
        android:id="@+id/item6"
        android:layout_width="match_parent"
    	android:layout_height="44dp"
    	android:background="#FFFFFF"
         >
   		<TextView
            android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:layout_marginLeft="20dp"
   			android:text="检查更新"
   			android:textSize="14sp"
            android:textColor="#484848"
            android:layout_centerVertical="true"
   			/> 
   		<ImageView 
   		    android:id="@+id/arrow6"
	   		android:layout_width="8dp"
	   		android:layout_height="18dp"
   			android:layout_alignParentRight="true" 
   			android:layout_marginRight="20dp"
   			android:background="@drawable/arrowplay"
   			android:layout_centerVertical="true"
  			/>
   		<TextView 
   		    android:id="@+id/versionText"
   		    android:layout_toLeftOf="@id/arrow6"
            android:layout_width="wrap_content"
   			android:layout_height="match_parent"
   		    android:layout_marginRight="10dp"
   		    android:text="v1.0.2"
   		    android:textColor="#484848"
   		    android:textSize="14sp"
   		    android:gravity="center"
   		    />
     </RelativeLayout>
	<View 
        android:layout_width="match_parent"
    	android:layout_height="0.5dp"
        android:background="#d4d4d4"
        />
	
	
</LinearLayout>
