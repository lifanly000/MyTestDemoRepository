<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView 
        android:id="@+id/time"
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:text="aaa"
	    android:gravity="center"
        />
    <LinearLayout
        android:id="@+id/cndy_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/voice_RL_left"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/learn_icon_blue" >

            <TextView
                android:id="@+id/voiceTime_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="2dp"
                android:background="@drawable/learn_playing"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/voiceTimeRight_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/voiceTime_left"
                android:textColor="#FFFFFF"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:maxWidth="200dp"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cndy_student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/voice_RL_right"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/learn_icon_red2"
             >

            <TextView
                android:id="@+id/voiceTime_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="2dp"
                android:background="@drawable/learn_playing"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/voiceTimeRight_tight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/voiceTime_right"
                android:textColor="#FFFFFF"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:maxWidth="200dp"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>